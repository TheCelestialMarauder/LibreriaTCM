<!-- src/views/usuarios/edit.ejs -->
<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Editar Usuario - <%= usuario.nombre %></title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 min-h-screen flex flex-col">
    <%- include('../partials/navbar') %>

    <main class="flex-grow container mx-auto px-4 py-8">
      <div class="max-w-lg mx-auto bg-white p-8 rounded-lg shadow-md">
        <h1 class="text-2xl font-bold text-center text-gray-800 mb-6">
          Editar usuario: <%= usuario.nombre %>
        </h1>

        <% if (error) { %>
          <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-2 rounded mb-4">
            <p><%= error %></p>
          </div>
        <% } %>

        <form action="/usuarios/edit/<%= usuario.id %>" method="POST" class="space-y-5">
          <div>
            <label for="nombre" class="block text-sm font-medium text-gray-700">Nombre *</label>
            <input
              type="text"
              name="nombre"
              id="nombre"
              value="<%= formData.nombre %>"
              class="mt-1 block w-full border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-blue-500 focus:border-blue-500"
              required
            />
          </div>

          <div>
            <label for="email" class="block text-sm font-medium text-gray-700">Email *</label>
            <input
              type="email"
              name="email"
              id="email"
              value="<%= formData.email %>"
              class="mt-1 block w-full border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-blue-500 focus:border-blue-500"
              required
            />
          </div>

          <div>
            <label for="password" class="block text-sm font-medium text-gray-700">
              Contraseña (dejar en blanco para no cambiar)
            </label>
            <input
              type="password"
              name="password"
              id="password"
              class="mt-1 block w-full border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-blue-500 focus:border-blue-500"
            />
          </div>

          <div>
            <label for="id_rol" class="block text-sm font-medium text-gray-700">Rol *</label>
            <select
              name="id_rol"
              id="id_rol"
              class="mt-1 block w-full border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-blue-500 focus:border-blue-500"
              required
            >
              <option value="">-- Seleccionar rol --</option>
              <% roles.forEach(r => { %>
                <option
                  value="<%= r.id %>"
                  <%= formData.id_rol == r.id ? 'selected' : '' %>
                >
                  <%= r.nombre.charAt(0).toUpperCase() + r.nombre.slice(1) %>
                </option>
              <% }) %>
            </select>
          </div>

          <div class="text-center">
            <button
              type="submit"
              class="w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500"
            >
              Guardar Cambios
            </button>
          </div>
        </form>
      </div>
    </main>

    <footer class="bg-white shadow-inner py-4 mt-auto">
      <div class="text-center text-gray-600 text-sm">
        &copy; 2025 LibreríaTCM
      </div>
    </footer>
  </body>
</html>