<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Iniciar Sesión - LibreríaTCM</title>
    <!-- Carga Tailwind vía CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 min-h-screen flex flex-col">
    <!-- Barra de navegación -->
    <%- include('../partials/navbar') %>

    <main class="flex-grow container mx-auto px-4 py-8">
      <div class="max-w-md mx-auto bg-white p-8 rounded-lg shadow-md">
        <h1 class="text-2xl font-bold text-center text-gray-800 mb-6">
          Inicia Sesión
        </h1>

        <!-- Mostrar posible error -->
        <% if (error) { %>
          <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-2 rounded mb-4">
            <p><%= error %></p>
          </div>
        <% } %>

        <form action="/login" method="POST" class="space-y-5">
          <!-- Email -->
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700">
              Correo electrónico
            </label>
            <input
              type="email"
              name="email"
              id="email"
              value="<%= formData?.email || '' %>"
              class="mt-1 block w-full border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-blue-500 focus:border-blue-500"
              placeholder="tu@correo.com"
              required
            />
          </div>

          <!-- Contraseña -->
          <div>
            <label for="password" class="block text-sm font-medium text-gray-700">
              Contraseña
            </label>
            <input
              type="password"
              name="password"
              id="password"
              class="mt-1 block w-full border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-blue-500 focus:border-blue-500"
              placeholder="********"
              required
            />
          </div>

          <!-- Botón Iniciar Sesión -->
          <div>
            <button
              type="submit"
              class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
            >
              Entrar
            </button>
          </div>
        </form>

        <p class="mt-6 text-center text-gray-600">
          ¿No tienes cuenta?
          <a href="/register" class="text-blue-600 hover:underline">
            Regístrate
          </a>
        </p>
      </div>
    </main>

    <!-- Footer -->
    <footer class="bg-white shadow-inner py-4">
      <div class="text-center text-gray-600 text-sm">
        &copy; 2025 LibreríaTCM. Todos los derechos reservados.
      </div>
    </footer>
  </body>
</html>